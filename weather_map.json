{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "title": {
      "text": "Average Rainfall in Major Australian Cities From 2008 - 2017 (mm)",
      "anchor": "middle",  
      "fontSize": 30,      
      "align": "center",   
      "fontWeight": "bold" ,
      "font": "Arial, sans-serif" 
    },
    "projection": {
      "type": "albers",
      "scale": 900,
      "rotate": [-135, 3.5], 
      "center": [0, -24.1339185], 
      "parallels": [-43.0331597, -5.2346774]
    },
    "data": {
      "url": "data/STE_2021_AUST_GDA2020.json",
      "format": {
        "type": "json"
      }
    },
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "data/Major_Australian_Cities_Weather_Data.csv",
          "format": {
            "type": "csv"
          }
        },
        "transform": [
          {
            "aggregate": [{"op": "mean", "field": "Rainfall", "as": "AvgRainfall"}],
            "groupby": ["Location", "Longitude", "Latitude"]
          }
        ],
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "AvgRainfall",
            "type": "quantitative",
            "title": "Average Rainfall (mm)",
            "scale": {
               "range": [100, 1000]  
            },
            "legend": {
                "orient": "bottom-right", 
                "titleFontSize": 12,
                "labelFontSize": 10,
                "symbolSize": 50  
          }
          },
          "color": {
            "field": "AvgRainfall",
            "type": "quantitative",
            "scale": {
                "scheme": "blues",
                "domain": [0, 5]
            },
            "title": "Average Rainfall (mm)",
            "legend": {
                "orient": "top-right",  
                "titleFontSize": 12,
                "labelFontSize": 10
              }
          },
     
          "tooltip": [
            {"field": "Location", "type": "nominal", "title": "City"},  
            {"field": "AvgRainfall", "type": "quantitative", "title": "Rainfall (mm)", "format": ".2f"}
          ]

        },

        "selection": {
          "tooltip": {
            "type": "single",
            "on": "mouseover",
            "encodings": ["longitude", "latitude"],
            "nearest": false
          }
        }
      },
      {
        "data": {
            "graticule": true
        },
        "mark": {
            "type": "geoshape",
            "stroke": "#c3c3c3",  
            "strokeWidth": 0.7 ,
            "opacity": 0.7
        }
      }

      
    ]
  }
  